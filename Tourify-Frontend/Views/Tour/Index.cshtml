<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tourify - Live & Travel</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />

    <link rel="stylesheet" href="./css.css" />
    <link rel="stylesheet" href="~/css/landing.css" />
    <link href="./css/chatbot.css" rel="stylesheet" />
  </head>

  <body>

    <!-- Hero Carousel Section -->
    <section
      id="heroCarousel"
      class="fix carousel slide carousel-fade"
      data-bs-ride="carousel"
      data-bs-interval="5000"
    >
      <div class="carousel-inner">
        <!-- Slide 1 -->
        <div class="carousel-item active">
          <div
            class="hero hero-slide d-flex align-items-center justify-content-center"
          >
            <div class="container text-center text-white animate-slide">
              <h2 class="fw-light animate-fadein">Helping Others</h2>
              <h1 class="display-4 fw-bold animate-slideup">LIVE & TRAVEL</h1>
              <p class="lead animate-delay">Special offers to suit your plan</p>
            </div>
          </div>
        </div>

        <!-- Slide 2 -->
        <div class="carousel-item">
          <div
            class="hero hero-slide d-flex align-items-center justify-content-center"
            style="
              background-image: url('https://images.pexels.com/photos/1450360/pexels-photo-1450360.jpeg?auto=compress&cs=tinysrgb&w=600');
            "
          >
            <div class="container text-center text-white animate-slide">
              <h2 class="fw-light animate-fadein">Helping Others</h2>
              <h1 class="display-4 fw-bold animate-slideup">LIVE & TRAVEL</h1>
              <p class="lead animate-delay">Special offers to suit your plan</p>
            </div>
          </div>
        </div>

        <!-- Slide 3 -->
        <div class="carousel-item">
          <div
            class="hero hero-slide d-flex align-items-center justify-content-center"
            style="
              background-image: url('https://images.pexels.com/photos/994605/pexels-photo-994605.jpeg?auto=compress&cs=tinysrgb&w=1600');
            "
          >
            <div class="container text-center text-white animate-slide">
              <h2 class="fw-light animate-fadein">Helping Others</h2>
              <h1 class="display-4 fw-bold animate-slideup">LIVE & TRAVEL</h1>
              <p class="lead animate-delay">Special offers to suit your plan</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Modern Tour Search Form -->
    <div class="booking-form">
      <form
        class="row g-3 align-items-end"
        method="get"
        action="/tourify/tour_list"
      >
        <!-- Where -->
        <div class="col-md-3">
          <label class="form-label">Where</label>
          <div class="form-floating-custom position-relative">
            <i class="bi bi-geo-alt-fill"></i>
            <input
              type="text"
              name="placeName"
              class="form-control"
              placeholder="Enter destination"
              th:value="${param.placeName}"
            />
          </div>
        </div>

        <!-- Duration -->
        <div class="col-md-2">
          <label class="form-label">Duration</label>
          <div class="form-floating-custom">
            <i class="bi bi-clock"></i>
            <select class="form-select" name="duration">
              <option value="" th:selected="${param.duration == null}">
                Any
              </option>
              <option value="1" th:selected="${param.duration == '1'}">
                01 Day
              </option>
              <option value="3" th:selected="${param.duration == '3'}">
                03 Day
              </option>
              <option value="5" th:selected="${param.duration == '5'}">
                05 Day
              </option>
              <option value="7" th:selected="${param.duration == '7'}">
                07 Day
              </option>
            </select>
          </div>
        </div>

        <!-- Category -->
        <div class="col-md-3">
          <label class="form-label">Type</label>
          <div class="form-floating-custom">
            <i class="bi bi-globe-americas"></i>
            <input
              type="text"
              name="categoryName"
              class="form-control"
              placeholder="Enter type"
              th:value="${param.categoryName}"
            />
          </div>
        </div>

        <!-- People -->
        <div class="col-md-2">
          <label class="form-label">People</label>
          <div class="form-floating-custom">
            <i class="bi bi-people-fill"></i>
            <input
              type="number"
              name="touristNumberAssigned"
              class="form-control"
              placeholder="Enter number"
              th:value="${param.touristNumberAssigned}"
            />
          </div>
        </div>

        <!-- Search Button -->
        <div class="col-md-2 d-grid">
          <button type="submit" class="btn search-btn">
            <i class="bi bi-search"></i> Search
          </button>
        </div>
      </form>
    </div>

    <!-- Tour Cards -->
