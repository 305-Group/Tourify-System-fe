@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TOURIFY | Verify OTP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <link href="~/css/register.css" rel="stylesheet" />
</head>
<body>
    <div class="wave-container" aria-hidden="true">
        <div class="wave"></div>
        <div class="wave"></div>
        <div class="wave"></div>
    </div>

    <div class="card-glass">
        <div class="left-panel d-none d-md-block"></div>
        <div class="right-panel">
            <div class="mb-4 fade-slide-in">
                <h2 class="fw-bold text-success mb-2 text-start">TOURIFY</h2>
                <p class="text-muted text-start" style="font-size: 0.95rem">
                    Xác thực tài khoản của bạn
                </p>
            </div>

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["ErrorMessage"]
                </div>
            }

            <form action="/verify-otp" method="post">
                <input type="hidden" name="email" value="@ViewData["Email"]" />
                
                <div class="form-floating mb-4">
                    <input type="text"
                           name="otp"
                           class="form-control"
                           id="otp"
                           placeholder="Enter OTP"
                           required />
                    <label for="otp"><i class="fa-solid fa-key me-2"></i>Nhập mã OTP</label>
                </div>

                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    Vui lòng kiểm tra email của bạn và nhập mã OTP đã được gửi.
                </div>

                <div class="d-grid mb-4">
                    <button class="btn btn-register" type="submit">
                        Xác thực
                    </button>
                </div>

                <div class="text-center mb-4">
                    Không nhận được mã? 
                    <a href="#" class="text-danger text-decoration-none">Gửi lại</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html> 